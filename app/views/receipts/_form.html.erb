<%= form_for @receipt,  html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.label "Name (Tên mục)" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label "Total" %>
    <%= f.text_field :total, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label "Date" %>
    <%= f.text_field :date, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label "Package (Tên gói hàng)" %>
    <%= f.text_field :package_name, class: "form-control", required: true %>
  </div>

  <%= image_tag( @receipt.try(:picture).try(:url), class: "responsive-image" ) if @receipt.picture? %>
  <div class="form-group">
    <%= f.label :picture %>
    <% if @receipt.picture? %>
      <label> <%= @receipt.picture.file.filename %> </label>
      <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png',
                                 class: "form-control", value: @receipt.picture %>
    <% else %>
      <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png',
                                 required: true, class: "form-control" %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.submit "#{@action}", type: "submit", class: "btn btn-primary" %>
  </div>
<% end %>
