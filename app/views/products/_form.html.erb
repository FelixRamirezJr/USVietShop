<%= javascript_pack_tag 'components/Tax' %>

<%= form_for @product,  html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.label "Name (Tên)" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label "Price (Giá gốc)" %>
    <%= f.text_field :price, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label "Sell Price (Giá bán)" %>
    <%= f.text_field :sell_price, class: "form-control", required: true %>
  </div>


  <div class="form-group">
    <%= f.label "Quantity (Số lượng)" %>
    <%= f.number_field :quantity, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label "Condition of item (Điều kiện của mặt hàng)" %>
    <%= f.text_field :condition, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label "Description (Sự miêu tả)" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Weight (Cân nặng)" %>
    <%= f.number_field :weight, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Shipping Price (Giá vận chuyển)" %>
    <%= f.number_field :shipping_price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Package" %>
    <%= f.text_field :package_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <label> Vietnamese Dong (optional) -
      <span class="text-danger"> Xóa trường này nếu bạn muốn tính lại </span>
    </label>
    <%= f.text_field :dong, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :special_order  do %>
      <%= f.check_box :special_order %>
      Special Order ( Đơn hàng đặc biệt )
    <% end %>
  </div>

  <%= image_tag( @product.try(:picture).try(:url), class: "responsive-image" ) if @product.picture? %>
  <div class="form-group">
    <%= f.label :picture %>
    <% if @product.picture? %>
      <label> <%= @product.picture.file.filename %> </label>
      <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png',
                                 class: "form-control", value: @product.picture %>
    <% else %>
      <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png',
                                 required: true, class: "form-control" %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.submit "#{@action}", type: "submit", class: "btn btn-primary" %>
  </div>
<% end %>
